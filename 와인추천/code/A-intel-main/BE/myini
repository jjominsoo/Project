# Change the default character set to utf8 (utf8mb4) to enable MySQL to recognize data in utf 8 format
# Add the following to the bottom of my.ini file in MySQL server directory

[client]
default-character-set = utf8mb4

[mysqld]
character-set-client-handshake = FALSE
init_connect=SET collation_connection = utf8mbr_unicode_ci
init_connect=SET NAMES utf8mb4
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

[mysql]
default-character-set = utf8mb4

[mysqldump]
default-character-set = utf8mb4
